{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules"
  ],
  "verbose": false,
  "execMap": {
    "js": "node --harmony"
  },
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "env": {
    "NODE_ENV": "development",
    "NODE_PATH": "./lib:./src/shared:./src/server",
    "PORT" : 3001,
    "WEBPACK_DEV": true
  },
  "ext": "js jsx"
}
